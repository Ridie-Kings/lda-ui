{
  "name": "lda-ui",
  "version": "0.3.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles/tailwind.css",
    "./styles/tailwind.css": "./dist/styles/tailwind.css"
  },
  "files": [
    "dist",
    "copy-assets.js"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "tu-repositorio-aqui"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "tsup": "tsup",
    "build:lib": "tsup && pnpm run styles && node copy-assets.js",
    "prepublishOnly": "npm run build:lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "styles": "tailwindcss -i ./src/styles/index.css -o ./dist/styles/tailwind.css --minify"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "clsx": "^2.1.1",
    "lucide-react": "^0.526.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
